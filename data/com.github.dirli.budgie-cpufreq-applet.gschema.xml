<?xml version="1.0" encoding="UTF-8"?>
<schemalist>
    <schema id="com.github.dirli.budgie-cpufreq-applet">
        <key type="s" name="governor">
            <default>""</default>
            <summary>Governor</summary>
            <description>Saves the state of the governor</description>
        </key>
        <key type="d" name="pstate-max">
            <default>100</default>
            <summary>Max scaling</summary>
            <description>Maximum frequency scaling</description>
        </key>
        <key type="d" name="pstate-min">
            <default>25</default>
            <summary>Min scaling</summary>
            <description>Minimum frequency scaling</description>
        </key>
        <key type="b" name="turbo-boost">
              <default>true</default>
              <summary>Turbo boost</summary>
              <description>Saves the state of the Turbo boost</description>
        </key>
    </schema>
</schemalist>
